{
  "$schema": "https://raw.githubusercontent.com/govuk-one-login/quality-gates/refs/tags/v0.1.0/schemas/schema.json",
  "services": [
    {
      "quality-gates": [
        {
          "check-types": [
            "code style and linting",
            "secret scanning"
          ],
          "config": {
            "file": ".github/workflows/check-pr.yml",
            "name": "pre-commit",
            "path": "jobs.pre-commit"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "code style and linting"
          ],
          "config": {
            "file": ".github/workflows/check-pr.yml",
            "name": "Run Java build check",
            "path": "jobs.java-build-check"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "code style and linting"
          ],
          "config": {
            "file": ".github/workflows/check-pr.yml",
            "name": "Run Java style check",
            "path": "jobs.java-style-check"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "unit"
          ],
          "config": {
            "file": ".github/workflows/check-pr.yml",
            "name": "Run Unit tests",
            "path": "jobs.unit-tests"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "code style and linting",
            "unit test coverage",
            "vulnerability detection"
          ],
          "config": {
            "file": ".github/workflows/check-pr.yml",
            "name": "Sonar Scan",
            "path": "jobs.sonar-scan"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "contract"
          ],
          "config": {
            "file": ".github/workflows/check-pr.yml",
            "name": "Run Pact tests",
            "path": "jobs.pact-tests"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "stack"
          ],
          "config": {
            "file": ".github/workflows/check-pr.yml",
            "name": "Run Infra tests",
            "path": "jobs.infra-tests"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "integration",
            "new feature",
            "regression",
            "stack"
          ],
          "config": {
            "file": ".github/workflows/check-pr.yml",
            "name": "Run pre-merge integration tests",
            "path": "jobs.pre-merge-integration-tests"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "regression",
            "smoke"
          ],
          "config": {
            "file": ".github/workflows/smoke-test-build.yml",
            "name": "smoke",
            "path": "jobs.smoke"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        }
      ],
      "service-tag": "ipv-cri-driving-permit"
    }
  ]
}
